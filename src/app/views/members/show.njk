{% extends 'layout.njk' %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center/cover"></section>
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Membro</div>
        <div>{{member.name}}</div>
      </div>
      <div class="item">
        <div>E-mail</div>
        <div>{{member.email}}</div>
      </div>

      <div class="item">
        <div>Anivers√°rio</div>
        <div>{{member.birth}}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>{{"Masculino" if member.gender == "M" else "Feminino"}}</div>
      </div>

      <div class="item">
        <div>Tipo Sanguineo</div>
        <div>
          <span class="span-format">{{member.blood}}</span>
        </div>
      </div>

      <div class="item">
        <div>Peso</div>
        <div>
          {{member.weight}}kg
        </div>
      </div>

      <div class="item">
        <div>Altura</div>
        <div>
          {{member.height}}cm
        </div>
      </div>

      <a href="/members/{{member.id}}/edit" class="button">Editar</a>

    </section>
  </div>

{% endblock content %}